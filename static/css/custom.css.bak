.crop {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.crop img {
    width: 400px;
    height: 100%;
    margin: 5px 0 0 0;
}

.active{
    background-color:green !important;
}

#refresh{
    background-color:grey;
}

.refresh-alert-text{
    color:red;
}

.refresh-alert-bg{
    background-color:red !important;
}

#day-select{
    float:left;
}

#last-refreshed{
    float:right;
    text-align:right;
}

.small-text{
    font-size:15px;
    margin-left:10px;
}

#top-bar{
    position: fixed;
    width:50px;
    top: 0;
    margin-left: 45%;
    text-align:center;
    color:#FFF;
    z-index:1031;
    height: 60px;
    line-height: 55px;
}



